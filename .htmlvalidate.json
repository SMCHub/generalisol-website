{
  "extends": ["html-validate:recommended"],
  "rules": {
    "aria-label-misuse": "error",
    "aria-hidden-body": "error",
    "close-attr": "error",
    "close-order": "error",
    "deprecated": "error",
    "doctype-html": "error",
    "element-required-attributes": "error",
    "heading-level": "error",
    "input-missing-label": "error",
    "meta-refresh": "error",
    "multiple-labeled-controls": "error",
    "no-conditional-comment": "error",
    "no-deprecated-attr": "error",
    "no-dup-attr": "error",
    "no-dup-class": "warn",
    "no-dup-id": "error",
    "no-inline-style": "warn",
    "no-missing-references": "error",
    "no-raw-characters": "error",
    "no-redundant-aria-label": "warn",
    "no-redundant-for": "error",
    "no-redundant-role": "warn",
    "no-style-tag": "warn",
    "prefer-button": "error",
    "prefer-native-element": "warn",
    "require-sri": "off",
    "script-type": "error",
    "svg-focusable": "error",
    "unique-landmark": "error",
    "valid-id": "error",
    "wcag/h30": "error",
    "wcag/h32": "error",
    "wcag/h36": "error",
    "wcag/h37": "error",
    "wcag/h67": "error",
    "wcag/h71": "error"
  },
  "elements": [
    "html5"
  ]
}
